{% block content %}
<div>
    <h1 class="mb-0 py-3">General</h1>
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="p-3 bg-white rounded-3">
                <form action="">
                    <div class="form-group mb-3">
                        <label class="d-block">
                            <div class="d-block">
                                <img width="100" height="100"/>
                            </div>
                            Favicon:
                            <input type="file" class="form-control" placeholder="Enter site title">
                        </label>
                    </div>

                    <div class="form-group mb-3">
                        <label class="d-block">Title:
                            <input type="text" class="form-control" placeholder="Enter site title">
                        </label>
                    </div>

                    <div class="form-group mb-3">
                        <label class="d-block">Description:
                            <textarea class="form-control" placeholder="Enter site description"></textarea>
                        </label>
                    </div>

                    <div class="form-group mb-3">
                        <label class="d-block">Date Format:
                            <select class="form-select">
                                <option value="Y-m-d H:i:s">{{'now'|date('Y-m-d H:i:s')}}</option>
                                <option value="F d Y, H:i:s">{{'now'|date('F d Y, H:i:s')}}</option>
                                <option value="Y-m-d h:i:s A">{{'now'|date('Y-m-d h:i:s A')}}</option>
                                <option value="F d Y, H:i:s A">{{'now'|date('F d Y, H:i:s A')}}</option>
                            </select>
                        </label>
                    </div>
                    <div class="text-center pt-3">
                        <button class="btn btn-primary px-4 rounded-5">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}